    userid: <input type="text" name="userid"><br>
    turmaid:<input type="text" name="turmaid"><br>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <!--^NECESSARIO PARA EVITAR Forbidden, TAMBÉM PRECISA DE REDIRECIONAMENTO NO CONTROLLER PARA EVITAR BUGS-->
