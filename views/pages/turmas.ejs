<div id="turmas" v-cloak>
  <div class="container">
      <h1>Turmas</h1>
    <hr/>
    <!--TURMAS EM QUE O USUÁRIO ESTÁ APARECERIAM AQUI-->
    <div class="row">
      <div title="Turmas em que você está" class="col-sm-6">
        <h4>Minhas Turmas</h4>
        <div v-if="visivel">
          <form action="turma" method="post">
            <input type="hidden" name="admin" value="<%= me.id %>">
            <!--TO-DO:<input type="text" name="participantes">-->
            <!--TO-DO<input type="text" name="games">-->
            Nome:<input type="text" name="nome"><br><br>
            Descrição:<br><textarea name="descricao" placeholder="Ex: Turma do 6º ano do professor José"></textarea><br>
            <input type="hidden" name="codigo" value="1"><!--TESTE-->
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <input type="submit" value="Criar">
          </form>
        </div>
      </div>
      <div class="col-sm-6">
        <a class="btn btn-sm btn-outline-info account-settings-button" 
           @click="visibilidade()">{{buttontext}}</a>
      </div>
    </div>
    <div class="row">
      <div title="Clique para ver detalhes sobre a turma" class="card m-3">
        <div class="card-header">Nome da turma</div>
        <div class="card-body">Descrição</div>
      </div>
      <div title="Clique para ver detalhes sobre a turma" class="card m-3">
        <div class="card-header">Nome da turma</div>
        <div class="card-body">Descrição</div>
      </div>
      <div title="Clique para ver detalhes sobre a turma" class="card m-3">
        <div class="card-header">Nome da turma</div>
        <div class="card-body">Descrição</div>
      </div>
    </div>
  </div>
  <!--ADICIONA O USUÁRIO A TURMA (TESTE)-->
